{
  "info": {
    "name": "Branch APIs",
    "description": "CRUD endpoints for branches.\n\n**Variables to set before running:**\n- `baseUrl` — e.g. `http://localhost:4000/api/v1`\n- `departmentId` — a valid department UUID\n- `workShiftId` — a valid work-shift UUID (use in Create / Update bodies)\n\n`branchId` is auto-saved by the *Create Branch* test script.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:4000/api/v1",
      "type": "string"
    },
    {
      "key": "departmentId",
      "value": "",
      "type": "string",
      "description": "Set to a valid department UUID before running"
    },
    {
      "key": "workShiftId",
      "value": "",
      "type": "string",
      "description": "Set to a valid work-shift UUID before running"
    },
    {
      "key": "branchId",
      "value": "",
      "type": "string",
      "description": "Auto-populated by the Create Branch request"
    }
  ],
  "item": [
    {
      "name": "Get All Branches",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Accept-Language",
            "value": "en",
            "type": "text"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/branches?page=1&limit=20",
          "host": ["{{baseUrl}}"],
          "path": ["branches"],
          "query": [
            { "key": "page", "value": "1" },
            { "key": "limit", "value": "20" }
          ]
        }
      },
      "response": []
    },
    {
      "name": "Get All Branches (Arabic)",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Accept-Language",
            "value": "ar",
            "type": "text"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/branches",
          "host": ["{{baseUrl}}"],
          "path": ["branches"]
        }
      },
      "response": []
    },
    {
      "name": "Get All Branches Detailed",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/branches/detailed",
          "host": ["{{baseUrl}}"],
          "path": ["branches", "detailed"]
        }
      },
      "response": []
    },
    {
      "name": "Get Branches by Department",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Accept-Language",
            "value": "en",
            "type": "text"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/branches/by-department/{{departmentId}}?page=1&limit=20",
          "host": ["{{baseUrl}}"],
          "path": ["branches", "by-department", "{{departmentId}}"],
          "query": [
            { "key": "page", "value": "1" },
            { "key": "limit", "value": "20" }
          ]
        }
      },
      "response": []
    },
    {
      "name": "Get Branch by ID",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/branches/{{branchId}}",
          "host": ["{{baseUrl}}"],
          "path": ["branches", "{{branchId}}"]
        }
      },
      "response": []
    },
    {
      "name": "Create Branch",
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "const res = pm.response.json();",
              "if (res && res.id) {",
              "  pm.collectionVariables.set('branchId', res.id);",
              "  console.log('branchId saved:', res.id);",
              "}"
            ]
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json",
            "type": "text"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"nameEn\": \"Downtown Branch\",\n  \"nameAr\": \"فرع وجهة البلد\",\n  \"openAnyTime\": false,\n  \"latitude\": 29.3683,\n  \"longitude\": 47.9786,\n  \"departmentId\": \"{{departmentId}}\",\n  \"workShiftIds\": [\n    \"{{workShiftId}}\"\n  ]\n}",
          "options": {
            "language": "json"
          }
        },
        "url": {
          "raw": "{{baseUrl}}/branches",
          "host": ["{{baseUrl}}"],
          "path": ["branches"]
        }
      },
      "response": []
    },
    {
      "name": "Create Branch — Multiple Work Shifts",
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "const res = pm.response.json();",
              "if (res && res.id) {",
              "  pm.collectionVariables.set('branchId', res.id);",
              "  console.log('branchId saved:', res.id);",
              "}"
            ]
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json",
            "type": "text"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"nameEn\": \"Night Shift Branch\",\n  \"nameAr\": \"فرع شفت الليل\",\n  \"openAnyTime\": true,\n  \"latitude\": 29.3683,\n  \"longitude\": 47.9786,\n  \"departmentId\": \"{{departmentId}}\",\n  \"workShiftIds\": [\n    \"{{workShiftId}}\",\n    \"<paste-second-work-shift-uuid-here>\"\n  ]\n}",
          "options": {
            "language": "json"
          }
        },
        "url": {
          "raw": "{{baseUrl}}/branches",
          "host": ["{{baseUrl}}"],
          "path": ["branches"]
        }
      },
      "response": []
    },
    {
      "name": "Create Branch — No Work Shifts",
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "const res = pm.response.json();",
              "if (res && res.id) {",
              "  pm.collectionVariables.set('branchId', res.id);",
              "  console.log('branchId saved:', res.id);",
              "}"
            ]
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json",
            "type": "text"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"nameEn\": \"Temporary Branch\",\n  \"nameAr\": \"فرع مؤقت\",\n  \"openAnyTime\": false,\n  \"departmentId\": \"{{departmentId}}\"\n}",
          "options": {
            "language": "json"
          }
        },
        "url": {
          "raw": "{{baseUrl}}/branches",
          "host": ["{{baseUrl}}"],
          "path": ["branches"]
        }
      },
      "response": []
    },
    {
      "name": "Update Branch — Replace Work Shifts",
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json",
            "type": "text"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"nameEn\": \"Downtown Branch (Updated)\",\n  \"nameAr\": \"فرع وجهة البلد (محدّث)\",\n  \"latitude\": 29.3751,\n  \"longitude\": 47.9839,\n  \"workShiftIds\": [\n    \"{{workShiftId}}\"\n  ]\n}",
          "options": {
            "language": "json"
          }
        },
        "url": {
          "raw": "{{baseUrl}}/branches/{{branchId}}",
          "host": ["{{baseUrl}}"],
          "path": ["branches", "{{branchId}}"]
        }
      },
      "response": []
    },
    {
      "name": "Update Branch — Clear All Work Shifts",
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json",
            "type": "text"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"workShiftIds\": []\n}",
          "options": {
            "language": "json"
          }
        },
        "url": {
          "raw": "{{baseUrl}}/branches/{{branchId}}",
          "host": ["{{baseUrl}}"],
          "path": ["branches", "{{branchId}}"]
        }
      },
      "response": []
    },
    {
      "name": "Delete Branch",
      "request": {
        "method": "DELETE",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/branches/{{branchId}}",
          "host": ["{{baseUrl}}"],
          "path": ["branches", "{{branchId}}"]
        }
      },
      "response": []
    }
  ]
}
