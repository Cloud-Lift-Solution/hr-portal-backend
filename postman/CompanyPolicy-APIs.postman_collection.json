	"item": [
		{
			"name": "Create Company Policy",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"if (pm.response.code === 201) {",
							"    const response = pm.response.json();",
							"    pm.collectionVariables.set('policyId', response.data.id);",
							"    pm.environment.set('policyId', response.data.id);",
							"    console.log('Policy ID saved:', response.data.id);",
							"}"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"title\": \"Remote Work Policy\",\n  \"description\": \"This policy outlines the guidelines and requirements for employees working remotely. It includes expectations for availability, communication, and productivity standards.\",\n  \"fileUrl\": \"https://s3.amazonaws.com/hr-documents/policies/remote-work-policy.pdf\",\n  \"companyId\": \"{{companyId}}\",\n  \"branchId\": \"{{branchId}}\"\n}"
				},
				"url": {
					"raw": "{{baseUrl}}/company-policies",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"company-policies"
					]
				},
				"description": "Create a new company policy with title, description, optional file URL, company ID, and optional branch ID"
			},
			"response": []
		},
